<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_loading"
        android:layout_width="@dimen/d100"
        android:layout_height="@dimen/d100"
        android:layout_gravity="center"
        android:background="@drawable/loading_view"/>

    <TextView
        android:id="@+id/tv_loading_desc"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/d100"
        android:layout_gravity="center"
        android:paddingStart="@dimen/d20"
        android:paddingEnd="@dimen/d20"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:text="@string/loading_failed"
        android:textColor="@drawable/loading_failed_text_select"
        android:textSize="@dimen/d42"/>

</FrameLayout>
