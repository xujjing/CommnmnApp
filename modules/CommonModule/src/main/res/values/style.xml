<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MyTranslucentTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">#00000000</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
    <style name="AppThemeImmersed" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="colorPrimary">#FF000000</item>
        <item name="colorPrimaryDark">#FF000000</item>
        <item name="colorAccent">#FF000000</item>
        <!--api 21 可用 底部导航栏颜色-->
        <item name="android:navigationBarColor">#FF1C1C1E</item>
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
    </style>

</resources>